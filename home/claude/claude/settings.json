{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/hooks/skill-activation-prompt.sh"
          },
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/hooks/session-context.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/hooks/post-tool-use-tracker.sh"
          }
        ]
      }
    ]
  }
}
